const log = require('logToConsole');
const setDefaultConsentState = require('setDefaultConsentState');
const gtagSet = require('gtagSet');
const addConsentListener = require('addConsentListener');
const callInWindow = require('callInWindow');
const callLater = require('callLater');
const setInWindow = require('setInWindow');
const updateConsentState = require('updateConsentState');
const isConsentGranted = require('isConsentGranted');

const CONSENT_TYPES = [
  'ad_storage',
  'analytics_storage',
  'functionality_storage',
  'personalization_storage',
  'security_storage',
  'ad_user_data',
  'ad_personalization',
];

function getCurrentGtmConsent() {
  const state = {};
  CONSENT_TYPES.forEach((type) => {
    const granted = isConsentGranted(type);
    state[type] = granted ? 'granted' : 'denied';
  });
  return state;
}

function splitInput(input) {
  return input.split(',')
    .map(entry => entry.trim())
    .filter(entry => entry.length !== 0);
}

function parseCommandData(settings) {
  const regions = splitInput(settings.region);
  const granted = splitInput(settings.granted);
  const denied = splitInput(settings.denied);
  const commandData = {};

  if (regions.length > 0) commandData.region = regions;
  granted.forEach(entry => commandData[entry] = 'granted');
  denied.forEach(entry => commandData[entry] = 'denied');

  return commandData;
}

var lastConsentSnapshot = null;

function equalsConsent(a, b) {
  if (!a || !b) return false;
  var keys = [
    'ad_storage',
    'analytics_storage',
    'functionality_storage',
    'personalization_storage',
    'security_storage',
    'ad_user_data',
    'ad_personalization'
  ];
  for (var i = 0; i < keys.length; i++) {
    if (a[keys[i]] !== b[keys[i]]) return false;
  }
  return true;
}

function forwardConsentChange() {
  var current = getCurrentGtmConsent();

  if (!equalsConsent(current, lastConsentSnapshot)) {
    lastConsentSnapshot = current;

    callInWindow('onConsentChangeFromGTM');
  }
}

function registerConsentListeners() {
  [
    'ad_storage',
    'analytics_storage',
    'functionality_storage',
    'personalization_storage',
    'security_storage',
    'ad_user_data',
    'ad_personalization'
  ].forEach(function(type) {
    addConsentListener(type, function(consentType, granted) {
      forwardConsentChange();
    });
  });
}

function main(data) {
  log('Consent Template Running');
  
  // Step 1: Optional gtag config
  gtagSet({
    ads_data_redaction: data.ads_data_redaction,
    url_passthrough: data.url_passthrough,
  });

  // Step 2: Set default consent state
  const defaultSettings = data.defaultSettings || [];
  defaultSettings.forEach((settings) => {
    const defaultData = parseCommandData(settings);
    setDefaultConsentState(defaultData);
  });
  
  // Step 3: Register listeners
  callLater(function() {
    registerConsentListeners();

    callInWindow('setGtmConsentListener', (consent) => {
      updateConsentState(consent);
    });

    setInWindow('getGtmPermissions', getCurrentGtmConsent);
    
    setInWindow('_gtmIsReady',true);
  });

}

main(data);
data.gtmOnSuccess();


